@model Project_3.Models.Employee
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("ResetPassword", "Manager", FormMethod.Post))
{
    <div class="container-fluid py-4">
        <div class="row">
            <div class="add-new-card col-xl-10 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="numbers">
                            <h4 class="font-weight-bolder text-center">Reset Password</h4>
                        </div>
                        <div class="col-8 form-data-card-title ">
                            <div class="input-form">
                                <p class="title">Username</p>
                                <input type="text" placeholder="Enter your username" name="Username" value="@Model.Username" readonly>
                            </div>
                            <div class="input-form">
                                <p class="title">Password</p>
                                <input type="password" placeholder="Enter your password" name="Password">
                                @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-data-button">
                            <button type="submit" class="add-button">Save</button>

                            <a class="delete-button" href="@Url.Action("Index","Manager")">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

