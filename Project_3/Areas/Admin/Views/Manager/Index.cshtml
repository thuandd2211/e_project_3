@using PagedList.Mvc;
@model PagedList.IPagedList<Project_3.Models.Employee>
@{
    ViewBag.Title = "Manager";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-xl-12 col-sm-6 mb-xl-0 mb-4">
            <div class="card add-new-card">
                <div class="card-body p-4 row">

                    <div class="numbers">
                        <h4 class="font-weight-bolder text-center">Account Data</h4>
                    </div>
                    <div class="col-8">
                        <a class="add-button" href="@Url.Action("Add","Manager")">Add</a>

                    </div>
                    <div class="search-box col-4 mt-3 mb-3">
                        @using (Html.BeginForm("Index", "Manager", FormMethod.Get))
                        {
                            <input type="text" class="search-box-input" name="search" id="search" placeholder="Enter Name, Username">
                            <button type="submit" class="fas fa-search search-btn"></button>
                        }
                    </div>
                    <div class="container-fluid">

                        <!-- Page Heading -->


                        <div class="card shadow mb-4">

                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%"
                                           cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Username</th>
                                                <th>Full Name</th>
                                                <th>Date of Birth</th>
                                                <th>Email</th>
                                                <th>Phone Number</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!--Thêm tb-img nếu chứa ảnh-->
                                            <!--Thêm tb-text-content nếu chứa nội dung dài-->
                                            @if (Model.Any())
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.EmpId</td>
                                                        <td>@item.Username</td>
                                                        <td>@item.Fullname</td>
                                                        <td>@item.Birthday</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.Phone</td>
                                                        <td class="d-flex align-items-center justify-content-around">
                                                            <a href="@Url.Action("Edit","Manager", new {id = item.EmpId})" data-toggle="modal"
                                                               data-target="#editModal">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a href="@Url.Action("Delete","Manager", new {id = item.EmpId})"><i class="fas fa-trash-alt"></i></a>
                                                            <a href="@Url.Action("ResetPassword", "Manager", new {id = item.EmpId})"><i class=" fa fa-lock"></i></a>

                                                        </td>
                                                    </tr>
                                                    <tr></tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="7" style="text-align:center; font-size:large;">
                                                        <b>No Data</b>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="center">
                                    <div class="pagination">
                                        @Html.PagedListPager(Model, p => Url.Action("Index", new { page = p, currentFilter = ViewBag.CurrentFilter }))
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>

            </div>
        </div>
    </div>
</div>

